<!-- spinner-toast.liquid -->
<div id="spinner" class="spinner hidden"></div>
<div id="toast" class="toast hidden">Thông báo</div>

<style>
  {% comment %} .hidden {
    display: none;
  } {% endcomment %}

  .spinner {
    position: fixed;
    top: 50%;
    left: 50%;
    z-index: 9999;
    transform: translate(-50%, -50%);
    border: 6px solid #f3f3f3;
    border-top: 6px solid #3498db;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    animation: spin 1s linear infinite;
    background-color: white;
  }

  @keyframes spin {
    0% { transform: translate(-50%, -50%) rotate(0deg); }
    100% { transform: translate(-50%, -50%) rotate(360deg); }
  }

  .toast {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 9999;
    background: #2ecc71;
    color: white;
    padding: 14px 24px;
    border-radius: 8px;
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.3);
    animation: fadeIn 0.5s ease;
    min-width: 200px;
    text-align: center;
    font-weight: bold;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
</style>


